<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="audio.phone.com.silence"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" />

	<!-- permiso para poder capturar las llamadas  -->

	<uses-permission android:name="android.permission.READ_PHONE_STATE"/>
	
	<!-- permiso para colgar una llamada  -->
	
	<uses-permission android:name="android.permission.CALL_PHONE"></uses-permission>
	
	<!-- permiso para contestar una llamada  -->
	
	<uses-permission android:name="android.permission.MODIFY_PHONE_STATE"></uses-permission>

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name="phone.end.call.Prueba_AudioManagerActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>